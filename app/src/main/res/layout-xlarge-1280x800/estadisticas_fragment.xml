<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/rojogoogleP"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/estadisticas"
        android:textColor="@color/blanco"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aceptar"
        android:layout_below="@+id/cabecera"
        android:orientation="vertical">

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/preguntas_respondidas" />

            <TextView
                android:id="@+id/respondidas"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/preguntas_acertadas" />

            <TextView
                android:id="@+id/acertadas"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_RPG" />

            <TextView
                android:id="@+id/rpg_aventras_graficas"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Estrategia" />

            <TextView
                android:id="@+id/estrategia"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Lucha" />

            <TextView
                android:id="@+id/lucha"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Plataformas" />

            <TextView
                android:id="@+id/plataformas_aventuras"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Shooter" />

            <TextView
                android:id="@+id/shooter"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Deportes" />

            <TextView
                android:id="@+id/deportes"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>

        <LinearLayout style="@style/EstadisticasLinearLayout">

            <TextView
                style="@style/EstadisticasTextViewDato"
                android:text="@string/categoria_Otros" />

            <TextView
                android:id="@+id/otros"
                style="@style/EstadisticasTextViewPorcentaje" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/aceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_boton_rojo"
        android:gravity="center"
        android:padding="20dp"
        android:stateListAnimator="@null"
        android:text="@string/aceptar"
        android:textAllCaps="true"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

</RelativeLayout>